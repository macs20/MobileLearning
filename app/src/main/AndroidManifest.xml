<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shivam.mobilelearning1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <service android:name=".MyFirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".A1_SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".A1b_QuestionnaireScrollingActivity"
            android:label="@string/title_activity_questionnaire_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".A1c_DisplayLearningStyleActivity" />
        <activity android:name=".A1a_GoogleSignInActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".A2_DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".A2b_DashProfileActivity"
            android:label="@string/title_activity_dash_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".A2c1_DashDiscoverActivity" />
        <activity android:name=".A2c2_CourseDetailsActivity" />
        <activity android:name=".A3_CourseTopicsActivity" />
        <activity android:name=".A4_TopicFiles" />
        <activity android:name=".A5_ViewCoursePDF" />
        <activity android:name=".A6_ViewCourseVideo" />
        <activity android:name=".A2b_HelpInfoActivity" />
        <activity android:name=".A2d_DashRecommended" />
        <activity android:name=".A7_QuizActivity" />
        <activity android:name=".A8_IntuitiveTest" />
        <activity android:name=".A9_QuizResult"></activity>
    </application>

</manifest>