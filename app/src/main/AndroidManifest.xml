<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shivam.MobileLearning">

    <uses-permission android:name="android.permission.INTERNET" />

    <service android:name=".MyFirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.shivam.MobileLearning.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.shivam.MobileLearning.EmailPasswordActivity" />
        <activity
            android:name="com.example.shivam.MobileLearning.QuestionnaireScrollingActivity"
            android:label="@string/title_activity_questionnaire_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.shivam.MobileLearning.DisplayLearningStyleActivity" />
        <activity android:name="com.example.shivam.MobileLearning.GoogleSignInActivity" />
        <activity android:name="com.example.shivam.MobileLearning.MainActivity" />
        <activity
            android:name="com.example.shivam.MobileLearning.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.shivam.MobileLearning.FirebaseStorageActivity" />
        <activity android:name="com.example.shivam.MobileLearning.PandaChatActivity"></activity>
    </application>

</manifest>