<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.mobilelearning1.A8_IntuitiveTest">

    <include layout="@layout/my_toolbar"
        android:id="@+id/intuitive_test_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/intuitive_test_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/intuitive_question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is another way to define a decimal number, other than float?"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/intuitive_answer_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="50dp"
                android:focusableInTouchMode="true"
                android:hint="Type your answer here"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/system_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="10dp"
                android:textSize="24sp"
                android:textStyle="italic"
                tools:text="Think of other possibilities in which this can be achieved" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit_intuitive_answer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</RelativeLayout>
